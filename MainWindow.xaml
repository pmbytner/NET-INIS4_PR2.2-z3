<Window x:Class="NET_INIS4_PR2._2_z3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_INIS4_PR2._2_z3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            >Kolor obramowania:</Label>
        <Label
            Grid.Row="1"
            >Kolor tła:</Label>
        <Label
            Grid.Row="2"
            >Kolor tekstu:</Label>

        <TextBox
            Grid.Column="1"
            Grid.Row="0"
            Text="{Binding
                Path=KolorObramowania,
                UpdateSourceTrigger=PropertyChanged
            }"
            ></TextBox>
        <TextBox
            Grid.Column="1"
            Grid.Row="1"
            Text="{Binding
                Path=KolorTła,
                UpdateSourceTrigger=PropertyChanged
            }"
            ></TextBox>
        <TextBox
            Grid.Column="1"
            Grid.Row="2"
            Text="{Binding
                Path=KolorTekstu,
                UpdateSourceTrigger=PropertyChanged
            }"
            ></TextBox>

        <Border
            Grid.Row="3"
            Grid.ColumnSpan="2"
            BorderThickness="5"
            BorderBrush="{Binding Path=KolorObramowania}"
            Background="{Binding Path=KolorTła}"
            >
            <TextBlock
                Foreground="{Binding Path=KolorTekstu}"
                >Test</TextBlock>
        </Border>
    </Grid>
</Window>
